<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="org.pnpl.export.woped">
    <property name="ECLIPSE_HOME" value="../../../../../eclipse/modeling-2024-09/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../../../../../workspace/fresh"/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="org.pnpl.export.woped.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/org.pnpl.export.woped/bin"/>
    </path>

    <path id="org.pnpl.export.woped.classpath">
        <path refid="org.pnpl.export.woped.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="org.pnpl.export.woped.libraryclasspath.alljars">
        <pathelement location="../org.pnpl.export.woped/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="org.pnpl.export.woped.classpath.alljars">
        <path refid="org.pnpl.export.woped.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="org.pnpl.export.woped.main.Generate" classpathref="org.pnpl.export.woped.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="org.pnpl.export.woped.main.Generate" classpathref="org.pnpl.export.woped.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
