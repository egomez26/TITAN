<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="org.pnpl.export.cpntools">
    <property name="ECLIPSE_HOME" value="../../../../../eclipse/modeling-2024-09/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../../../../../workspace/fresh"/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="org.pnpl.export.cpntools.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/org.pnpl.export.cpntools/bin"/>
        <pathelement location="${ECLIPSE_WORKSPACE}//.metadata/.plugins/org.eclipse.pde.core/.external_libraries/de.ovgu.featureide.fm.core_3.11.1.202403121722/lib/antlr-3.4.jar"/>
        <pathelement location="${ECLIPSE_WORKSPACE}//.metadata/.plugins/org.eclipse.pde.core/.external_libraries/de.ovgu.featureide.fm.core_3.11.1.202403121722/lib/org.sat4j.core.jar"/>
        <pathelement location="${ECLIPSE_WORKSPACE}//.metadata/.plugins/org.eclipse.pde.core/.external_libraries/de.ovgu.featureide.fm.core_3.11.1.202403121722/lib/org.sat4j.pb.jar"/>
        <pathelement location="${ECLIPSE_WORKSPACE}//.metadata/.plugins/org.eclipse.pde.core/.external_libraries/de.ovgu.featureide.fm.core_3.11.1.202403121722/lib/splar.jar"/>
        <pathelement location="${ECLIPSE_WORKSPACE}//.metadata/.plugins/org.eclipse.pde.core/.external_libraries/de.ovgu.featureide.fm.core_3.11.1.202403121722/lib/SPLCAT.jar"/>
        <pathelement location="${ECLIPSE_WORKSPACE}//.metadata/.plugins/org.eclipse.pde.core/.external_libraries/de.ovgu.featureide.fm.core_3.11.1.202403121722/lib/commons-math-2.2.jar"/>
        <pathelement location="${ECLIPSE_WORKSPACE}//.metadata/.plugins/org.eclipse.pde.core/.external_libraries/de.ovgu.featureide.fm.core_3.11.1.202403121722/lib/uvl-parser.jar"/>
    </path>

    <path id="org.pnpl.export.cpntools.classpath">
        <path refid="org.pnpl.export.cpntools.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="org.pnpl.export.cpntools.libraryclasspath.alljars">
        <pathelement location="../org.pnpl.export.cpntools/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="org.pnpl.export.cpntools.classpath.alljars">
        <path refid="org.pnpl.export.cpntools.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="org.pnpl.export.cpntools.main.Generate" classpathref="org.pnpl.export.cpntools.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="org.pnpl.export.cpntools.main.Generate" classpathref="org.pnpl.export.cpntools.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
